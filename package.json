{
  "name": "@feltcoop/gro",
  "version": "0.0.0",
  "description": "opinionated tools for web development",
  "type": "module",
  "bin": {
    "gro": "./dist/bin/gro.js"
  },
  "license": "ISC",
  "homepage": "https://github.com/feltcoop/gro#readme",
  "scripts": {
    "ts": "tsc -w",
    "ts:build": "tsc",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf ./build/ ./dist/",
    "devdist": "rm -rf ./dist/ && cp -r ./build/ ./dist/ && npm link",
    "rebuild": "npm run clean && npm run ts:build && npm run devdist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feltcoop/gro.git"
  },
  "bugs": {
    "url": "https://github.com/feltcoop/gro/issues"
  },
  "keywords": [],
  "author": {
    "name": "Felt.coop",
    "email": "team@felt.social",
    "url": "https://felt.social"
  },
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=12.16.0"
  },
  "dependencies": {
    "cheap-watch": "^1.0.2",
    "fs-extra": "^9.0.0",
    "kleur": "^3.0.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-pluginutils": "^2.8.2",
    "sade": "^1.7.3",
    "source-map-support": "^0.5.16",
    "sourcemap-codec": "^1.4.8",
    "terser": "^4.6.8"
  },
  "peerDependencies": {
    "prettier": "^1.19.1",
    "rollup": "^2.3.1",
    "svelte": "^3.20.1",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "@types/node": "^12.12.32",
    "@types/prettier": "^1.19.1",
    "@types/source-map-support": "^0.5.1",
    "prettier": "^1.19.1",
    "rollup": "^2.6.1",
    "svelte": "^3.20.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3"
  },
  "prettier": {
    "useTabs": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": false,
    "svelteSortOrder": "scripts-markup-styles",
    "overrides": [
      {
        "files": "*.json",
        "options": {
          "useTabs": false
        }
      }
    ]
  }
}
